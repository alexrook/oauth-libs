<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
        
    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>oul.web.tools.oauth.SessionFilter</filter-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/restricted/oauth-secret.html</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    
    <servlet>
        <servlet-name>GoogleOAuthServlet</servlet-name>
        <servlet-class>oul.web.tools.oauth.GoogleOAuthServlet</servlet-class>
        <init-param>
            <param-name>properties-file</param-name>
            <param-value>local.properties</param-value>
        </init-param>
        <init-param>
            <param-name>success-redirect-uri</param-name>
            <param-value>#/google-oauth</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>GoogleOAuthServlet</servlet-name>
        <url-pattern>/oauth/google/login</url-pattern>
        <url-pattern>/oauth/google/logout</url-pattern>
        <url-pattern>/oauth/google/callback</url-pattern>
        <url-pattern>/oauth/google/profile</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <error-page>
        <error-code>401</error-code>
        <location>/err/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/err/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/err/error.jsp</location>
    </error-page>
    
</web-app>
